<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context="com.viralandroid.futbolistik.DetailsActivity"
    android:background="@color/bright_foreground_disabled_material_dark">


<ImageView
    android:layout_width="match_parent"
    android:id="@+id/img_detail"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:layout_centerVertical="false"
    android:layout_centerHorizontal="false"
    android:layout_height="200dp" />

    <TextView
        android:text="Haber başlığı"
        android:layout_width="wrap_content"
        android:id="@+id/baslik"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:layout_below="@+id/img_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_material_light" />

    <TextView
        android:text="Haber tarihi"
        android:layout_width="wrap_content"
        android:id="@+id/tarih"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/switch_thumb_disabled_material_dark"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:layout_below="@+id/baslik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_material_light" />

    <TextView
        android:text="Haber yazarı"
        android:layout_width="wrap_content"
        android:id="@+id/yazar"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/switch_thumb_disabled_material_dark"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:layout_below="@+id/tarih"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_material_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/yazar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Haber detay metni burada olacak."
            android:layout_width="match_parent"
            android:id="@+id/icerik"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/bright_foreground_disabled_material_light"
            android:textSize="16sp"
            android:layout_below="@+id/tarih"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

    </ScrollView>


</RelativeLayout>
